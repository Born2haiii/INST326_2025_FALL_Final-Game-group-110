SWORD_recipes = (Recipe_Diamond_Sword |
                 Recipe_STONE_Sword | 
                 Recipe_Wood_Sword)

PIX_recipes = (Pickaxe_Diamond |
                 Pickaxe_WOOD | 
                 Pickaxe_STONE)

total_recipes = ( PIX_recipes | SWORD_recipes)

materials = {"STONE", "WOOD", "STICK", "DIAMOND"}

#Optimal paths 
OPTIMAL_PATHS = {
    "stone sword": [
        "place STONE at C1",
        "place STONE at B2",
        "place STICK at A3"
    ],
    "wood sword": [
        "place WOOD at C1",
